<div class='project-creation-page'>
	<div class='col-md-6'>
		<h3>Edit Project:</h3>

		<form class='form new-project-form' enctype="multipart/form-data" data-id="{{project.id}}" >
			<div class='form-group'>
				<label for='project-name'>Project Name: *Needed</label>
				<input
					class='form-input'
					type='text'
					id='project-name'
					name='project-name'
                    value="{{project.project_name}}"
				/>
			</div>
			<div class='form-group'>
				<label for='project-github'>Github Link:</label>
				<input
					class='form-input'
					id='project-github'
					name='project-github'
					placeholder="https://github.com/User/Project"
                    value="{{project.repo_link}}"
				></input>
			</div>
			<div class='form-group'>
				<label for='project-deployed'>Deployed Link:</label>
				<input
					class='form-input'
					id='project-deployed'
					name='project-deployed'
					placeholder="https://DeployedLink.com"
                    value="{{project.deployed_link}}"
				></input>
			</div>
			<div class='form-group'>
				<label for='project-caption'>Caption: *Needed</label>
				<input
					class='form-input'
					type='text'
					id='project-caption'
					name='project-caption'
					placeholder='Something Captivating'
                    value="{{project.caption}}"
				/>
			</div>
			<div class='form-group'>
				<label for='project-desc'>Description: *Needed</label>
				<textarea
					class='form-input'
					id='project-desc'
					name='project-desc'           
				>{{project.description}}</textarea>
			</div>
			
			<div class="form-group">
				<label for="project-image">Select Images:</label>
				<input enctype="multipart/form-data" 
				type="file" 
				id="project-images" 
				name="images"  
				accept='image/png, image/gif, image/jpeg' multiple>
			</div>
			<div class="preview-container">
				
			</div>
			<div class='form-group'>
				<button type='submit' class='btn btn-primary btn-edit'>Edit</button>
			</div>
		</form>
	</div>
</div>
<script src="../js/projectCreate.js"></script>